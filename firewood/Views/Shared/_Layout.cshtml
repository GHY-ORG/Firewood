                        <a href="@SiteConfig.SiteUrl/Home/Index/Type/1/Class/其他" title="其他"></a>
                    </li>
                </ul>
            </div>
            @if (@ViewBag.NickName == null)
            {
                <div class="col-md-3" id="before-log">
                    <a href="@SiteConfig.SiteUrl/User/PostLogin">登录</a>
                    <a href="@SiteConfig.SiteUrl/User/Register">注册</a>
                </div>
            }
            else
            {
                <div class="hidden-xs hidden-sm col-md-3 nav-right" id="after-log">
                    <div class="visible-lg-block user-img" id="user-pic"></div>
                    <div class="user-name">
                        <span>您好：</span>
                        <span id="uname">@ViewBag.NickName</span>
                    </div>
                    <div class="user-btn">
                        <span class="glyphicon glyphicon-align-justify"></span>
                    </div>
                </div>
                <ul id="nav-on">
                    <li class="col-md-6">
                        <a href="@SiteConfig.SiteUrl/User/Center" title="个人中心">
                            <span class="glyphicon glyphicon-cog nav-on-icon"></span>
                            <span class="glyphicon-class">个人中心</span>
                        </a>
                    </li>
                    <li class="col-md-6">
                        <a href="@SiteConfig.SiteUrl/User/Exit" title="退出登录">
                            <span class="glyphicon glyphicon-log-out nav-on-icon"></span>
                            <span class="glyphicon-class">退出登录</span>
                        </a>
                    </li>
                </ul>
            }
