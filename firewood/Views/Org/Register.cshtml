@model firewood.RegisterModels
@{
    Layout = "~/Views/Shared/Org_Layout.cshtml";
    ViewBag.Title = "社团/组织后台管理 柴火 | 西南财经大学学生活动发布平台";
    ViewBag.Css = new string[]{
        SiteConfig.SiteUrl+"/bundles/org_styles"
    };
}
<div class="col-md-7">
    <div class="col-sm-12 org-btn">
        <a class="btn btn-warning" href="@SiteConfig.SiteUrl/Org/Register" role="button">新增社团</a>
        <a class="btn btn-warning btn-white btn-right" href="@SiteConfig.SiteUrl/Org/Search/Page/1" role="button">社团查询</a>
    </div>
    <div class="col-sm-12 fw-border">
        @using (Html.BeginForm("PostRegister", "Org", FormMethod.Post, new { @class = "form-horizontal", @role = "form", @enctype = "multipart/form-data" }))
        {
            @Html.AntiForgeryToken()
            <div class="form-group">
                @Html.LabelFor(x => x.OrgName, new { @class = "col-md-4 control-label" })
                <div class="col-sm-8">
                    @Html.TextBoxFor(x => x.OrgName, new { @class = "form-control", required = "required" })
                </div>
                <div class="col-md-8 col-md-offset-4 error-text">
                    @Html.ValidationMessageFor(x => x.OrgName)
                </div>
            </div>
            <div class="form-group">
                <label class="col-sm-4 control-label">社团/组织logo</label>
                <div class="col-sm-8">
                    <input type="file" name="file" accept="image/*" required />
                </div>
                <div class="col-md-8 col-md-offset-4">
                    支持jpg/png/gif/jpeg格式，大小不超过5M，建议图片为正方形
                </div>
            </div>
            <div class="form-group">
                @Html.LabelFor(x => x.OrgDepartment, new { @class = "col-md-4 control-label" })
                <div class="col-sm-8">
                    @Html.TextBoxFor(x => x.OrgDepartment, new { @class = "form-control", required = "required" })
                </div>
                <div class="col-md-8 col-md-offset-4 error-text">
                    @Html.ValidationMessageFor(x => x.OrgDepartment)
                </div>
            </div>
            <div class="form-group">
                @Html.LabelFor(x => x.OrgContact, new { @class = "col-md-4 control-label" })
                <div class="col-sm-8">
                    @Html.TextBoxFor(x => x.OrgContact, new { @class = "form-control", required = "required", @type = "tel" })
                </div>
                <div class="col-md-8 col-md-offset-4 error-text">
                    @Html.ValidationMessageFor(x => x.OrgContact)
                </div>
            </div>
            <div class="form-group">
                @Html.LabelFor(x => x.OrgIntro, new { @class = "col-md-4 control-label" })
                <div class="col-sm-8">
                    @Html.TextAreaFor(x => x.OrgIntro, new { @class = "form-control", placeholder = "请输入社团/组织简介，500字以内~", rows = "5" })
                </div>
                <div class="col-md-8 col-md-offset-4 error-text">
                    @Html.ValidationMessageFor(x => x.OrgIntro)
                </div>
            </div>
            <div class="form-group">
                <div class="col-md-12">
                    <button type="submit" class="btn btn-warning btn-lg btn-block">注册</button>
                </div>
            </div>
        }
    </div>
</div>